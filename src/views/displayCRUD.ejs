<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display User</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        a {
            text-decoration: none;
        }

        .btn-edit {
            width: 60px;
            height: 20px;
            cursor: pointer;
            border-radius: 20px;
            border: 1px solid black;
        }

        .btn-delete {
            width: 60px;
            height: 20px;
            cursor: pointer;
            background: red;
            color: white;
            border: 1px solid black;
            border-radius: 20px;
        }
    </style>
</head>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Address</th>
            <th>Phone number</th>
            <th>Gender</th>
            <th>Role ID</th>
            <th>Actions</th>
        </tr>
        <!-- In data lÃªn table -->
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].phonenumber %>
                </td>
                <td>
                    <%= dataTable[i].gender %>
                </td>
                <td>
                    <%= dataTable[i].roleId %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>">
                        <button type="button" class="btn-edit">Edit</button>
                    </a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>">
                        <button type="button" class="btn-delete">Delete</button>
                    </a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>